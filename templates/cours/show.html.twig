{% block title %}Cours{% endblock %}

{% block body %}

    <h1>Cours</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cour.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ cour.contenu }}</td>
            </tr>
            <tr>
                <th>Cours_name</th>
                <td>{{ cour.coursName }}</td>
            </tr>
            <tr>
                <th>Nom_tuteur</th>
                <td>{{ cour.nomTuteur }}</td>
